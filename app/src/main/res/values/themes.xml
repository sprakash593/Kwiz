<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Main app theme (Compose-only, no action bar) -->
    <style name="Theme.Kwiz" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Launch theme with no splash -->
    <style name="Theme.Kwiz.Starting" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Transparent background prevents flash -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Let the system show your first Compose frame immediately -->
        <item name="android:windowIsTranslucent">true</item>

        <!-- Remove any animation -->
        <item name="android:windowDisablePreview">true</item>
    </style>

</resources>

